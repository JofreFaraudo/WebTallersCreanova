}
div.User{
top: 0px;
left: 0px;
width: 100%;
height: 80px;
margin: 0;
position: fixed; 
background-color: #9A9A9A;
border-radius: 0px 0px 10px 10px;
box-shadow: 0 7px 10px 0px rgba(0, 0, 0, 0.8);
}
div.User header.Userheader nav {
float: right;
color: transparent;
background: transparent;
}
div.User header.Userheader nav ul, div.User header.Userheader nav ul li ol {
float: right;
margin: 0;
padding: 0;
list-style: none;
color: transparent;
background: transparent;
}	
div.User header.Userheader nav ul li {
display: inline-block;
line-height: 80px;
color: transparent;
background: transparent;
}
div.User header.Userheader nav ul li:hover > ol {
				display:block;
			}
div.User header.Userheader nav ul li:hover > ol li a:hover {
				background-color: #FF0;
color: #9A9A9A;
			}
div.User header.Userheader nav ul li ol {
				display:none;
margin-left: 10px;
			}
div.User header.Userheader nav ul li ol li{
				background-color: #9A9A9A;
color: #FFF;
			}
div.User header.Userheader nav ul li a {display: block;
padding: 0 20px;
    text-decoration: none;
    color: #FFF;
    font-size: 30px;
    border-radius: 0 0 10px 10px;
text-align: center;
}
div.User header.Userheader nav ul li a:hover, a.Logo:hover {background: #FF0; color: #9A9A9A; transition:all 0.7s ease;}
a.Logo {border: 0;
        border-radius: 0 0 10px 10px;
	float: left;
	padding: 0;
text-decoration: none;
}
a.logo img{padding: 0; margin: 0; height: 70px;}
