.new-language{
border: 3px solid #bb8a61;
background-color: #bb8a61;
color: #000;
border-radius: 5px;
height: 25px;
width: auto;
float: left;
white-space: nowrap;
font-size: 11px;
font-family: 'Courier New', sans-serif;
text-align: center;
padding: 4px 1px 4px 1px;
box-shadow: 0 0 0 1px #000;
margin: 10px 0 0 0;
display: inline;
}
.languages{
width: 300px;
float: none;
}
.center{
display:inline-block;
padding: 1em 3em;
margin: 1em 25%;
}
.non-display{
display: none !important;
}
.new-language * {
vertical-align: middle;
}
.new-language i{
color: white;
}
.new-language a{
color: #ffa500;
border-bottom: 0;
text-decoration: none;
}
.new-language a:hover {
border-bottom: 1px solid #ffa500;
}
.new-language a:active, .new-language a:focus{
text-decoration: none;
border-bottom: 1px dotted #ffa500;
}
